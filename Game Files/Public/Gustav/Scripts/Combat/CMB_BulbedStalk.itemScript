INIT

	ITEM:__Me
	INT:%Attacked= 0

EVENTS
EVENT Attacked
VARS
	CHARACTER:_Char
	DAMAGE:_DamageType
ON
	OnDamage(_DamageType,_,_Char,_)
ACTIONS
	IF "c1&!c2"
		IsEqual(%Attacked,0)
		IsEqual(_DamageType, None)
	THEN
		PlaySound(__Me,"Items_Objects_Destroy_StalkBulb")
		Transform(__Me,ITEMTEMPLATE:Quest_CMB_StalkBulb_Gravity_10c7fb61-9c54-4910-a152-78ae743e51fb,"",1)
		Set(%Attacked,1)
		
	ENDIF
	