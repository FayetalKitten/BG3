INIT
	ITEM:__Me

EVENTS

EVENT PUZZLE_HiddenPerception_CheckAdvantage
VARS
	CHARACTER:_Char
ON
	OnFunction("PUZZLE_HiddenPerception_CheckAdvantage")
ACTIONS
	IF "c1"
		HasGlobalFlag("UND_HarperSpy_State_PlayerReadDiary")
	THEN
		SetVar(__Me,"CheckAdvantage_Result",INT:1)
	ELIF "!c1"
		HasGlobalFlag("UND_HarperSpy_State_UnderstoodRune")
	THEN
		SetVar(__Me,"CheckAdvantage_Result",INT:-1)
	ENDIF
