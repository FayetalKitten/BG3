INIT
	ITEM:__Me
	EXTERN STRING:%SoundStart=""
	EXTERN STRING:%SoundStop=""
	
EVENTS
EVENT On
	ON
		OnItemEvent(_, "UND_AdamantineForge_StartMove")
	ACTIONS
		ForceUpdate(__Me, 1)
		PlaySound(__Me, %SoundStart)

EVENT Off
	ON
		OnItemEvent(_, "UND_AdamantineForge_StopMove")
	ACTIONS
		PlaySound(__Me, %SoundStop)
		ForceUpdate(__Me, 0)

	
