game.states.Ooze = State { function ()
    description = [[
        Behaviour for the ooze. Simply wandering around and spawns acidic trail.
    ]]

    modules = { "shared.math" }

    local basePosition

    self.OnInit = function()
        basePosition = me.Position
    end

    nodes.AcidTrailSpawn = Proxy{
        game.states.SurfaceTrailSpawner,
        params = {
            SurfaceType = "ACID"
        }
    }

    nodes.Action_IdleWander = Action{
        function()
            Sleep(mod.math.random(3, 7))
            if GetDistance2DTo(me, basePosition) < 10 then
                Wander(5, mod.math.random(4, 7), MovementSpeed.Stroll)
            else
                MoveTo(basePosition, MovementSpeed.Stroll)
            end
        end
    }
end}