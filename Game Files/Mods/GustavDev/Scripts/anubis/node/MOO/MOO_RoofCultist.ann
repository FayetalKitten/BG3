game.states.MOO_RoofCultist = State{function ()

        modules = { "shared.moveto" }

        local guardPoint = Entity("S_MOO_RoofCultistPoint_42bc1a21-3c10-4514-9904-b4d5c396ae5c")
        local observePoint = Entity("S_MOO_RoofCultistGreetedPoint_22f46f37-c276-4d90-a5ac-eae60211b04c")
        local greetedFlag = Flag("MOO_Audience_Event_RoofCultistGreeting_7819a3c0-5138-4ff3-9798-7b64da638533")

        nodes.Observe = Action {
            CanEnter = function()
                return GetFlag(greetedFlag)
            end,

            function()
                if mod.moveto.MoveToPoint(observePoint, MovementSpeed.Stroll, me) then
                    LookFrom(observePoint)
                else
                    SteerTo(observePoint)
                end
                Sleep(3)
            end
        }

        nodes.Guard = Action {
            function()
                if mod.moveto.MoveToPoint(guardPoint, MovementSpeed.Stroll, me) then
                    LookFrom(guardPoint)
                else
                    SteerTo(guardPoint)
                end
                Sleep(3)
            end
        }



end}