game.states.LOW_SorcerousSundries_Miklaur = State{function()
    description = [[Butler that will stay in a trigger while being shot at by animated armour]]
    modules = {"shared.util" ,"shared.moveto"}
    -----------------------------------------
    -- Nodes
    local krankEntity = Entity("S_LOW_Krank_47a3de7a-049b-462d-b526-60a178a649db")
    local standTo = Entity("S_LOW_SorcerousSundries_MiklaurPosition_2a007098-ac2a-4984-b264-92a8576f58f7")
    local wanderTrigger = Entity("S_LOW_RamazithTeleportTo_18142b80-354c-4742-9765-d834fa995478")
    
    nodes.BeTarget = Action  {
        OnEnter = function()
            ApplyStatus(me, "ANIM_COWER", true, -1.0, nil)
        end,
        function()
            if mod.moveto.MoveToPoint(standTo, MovementSpeed.Stroll, me) then
                SteerTo(krankEntity)
            else
                Sleep(6.0)
            end
        end,
        OnLeave = function()
            RemoveStatus(me, "ANIM_COWER")
        end,
        Valid = function ()
            return not krankEntity.Character.IsDead
        end

    }

    nodes.Fallback = Action {

        function()
            WaitForInterrupt()
        end
    }

end
}