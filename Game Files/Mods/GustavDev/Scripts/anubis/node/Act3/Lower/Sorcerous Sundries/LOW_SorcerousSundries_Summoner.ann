game.states.LOW_SorcerousSundries_Summoner = State{function()
    modules = {"shared.util" ,"shared.moveto","shared.items"}
    -----------------------------------------
    -- Nodes

    local wanderPos = Entity("S_LOW_SorcerousSundries_PetWanderTrigger_9616dca3-9f19-4d81-a744-68392e1f3363")
    local randomPosition
    local randomSpell
    local spawnPosition
    local spells = {
        "Target_FindFamiliar_Frog",
        "Target_FindFamiliar_Cat",
        "Target_FindFamiliar_Rat",
        "Target_FindFamiliar_Crab",
        "Target_FindFamiliar_Spider"
    }

    nodes.Patrolling= Action {
        
        function()
            randomSpell = math.random(#spells)

            local pos = FindValidPosition(me, 2.5)
            if pos ~= nil then
                try
                    UseSpell(spells[randomSpell], pos,nil,nil,nil,true,true,true)
                catch e if ls.CheckType(e, error.UseSpellFailed) then
                    DebugText(me, tostring(e))
                end
            end
            Sleep(math.random(2, 5))
            Wander(15.0,math.random(20.0,30.0),MovementSpeed.Walk,wanderPos)
        end
    
    }

end
}