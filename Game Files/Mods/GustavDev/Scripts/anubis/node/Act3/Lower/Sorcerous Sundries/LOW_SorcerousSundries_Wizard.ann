
game.states.LOW_SorcerousSundries_Wizard = State{function()
    description = [[Wizard doing multiple actions in Sorcerous Sundries]]
    modules = {"shared.util" ,"shared.moveto"}

    params.StandAtTrigger = {type = EParamType.String, required=false, default=nil, help=[[
        trigger where npc will stand.
    ]]}
    -----------------------------------------
    -- Nodes
    local readAnim = Animation("CUST_Reading_Book_02_51295e0d-d253-4102-8634-f2c7d3443762")
    local standAtTriggerEntity = Entity(params.StandAtTrigger)


    nodes.Read = Action  {

        function()
            PlayAnimation(readAnim, true, false)

            Sleep(6.0)     
        end,


    Valid = function()
        return standAtTriggerEntity == nil or GetDistanceTo(me, standAtTriggerEntity) <= 2.0
    end
}

nodes.StandAtTrigger = Proxy {
    game.states.GLO_StandAtTrigger,
    params = {
        trigger = params.StandAtTrigger
    },
    CanEnter = function()
        return standAtTriggerEntity ~= nil
    end,
}

    nodes.Fallback = Action {

        function()
            WaitForInterrupt()
        end
    }

end
}