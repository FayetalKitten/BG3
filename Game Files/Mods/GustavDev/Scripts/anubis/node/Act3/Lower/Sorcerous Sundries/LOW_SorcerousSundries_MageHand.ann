game.states.LOW_SorcerousSundries_MageHand = State{function()
    description = [[Mage hand in Ramazith's Tower that moves around and casts create water]]
    modules = {"shared.util","shared.moveto","shared.character","shared.math"}
    -----------------------------------------
    -- Nodes
    local lookAtPos
    local currentPosition = 1
    local positions = {
        "S_LOW_SorcerousSundries_MageHandSpot_001_16edd611-d264-4900-8090-13108563cd68",
        "S_LOW_SorcerousSundries_MageHandSpot_000_400b9ddf-1d95-4c6b-b7a0-27a66111cb8f",
        "S_LOW_SorcerousSundries_MageHandSpot_002_446c0525-3c8d-45ed-bab4-6e57e6b4f164",
        "S_LOW_SorcerousSundries_MageHandSpot_003_4adcf8ec-e919-428e-ae65-f8d5adc60c57"
    }
    nodes.Patrolling = Action {

        function()
            
            lookAtPos = Entity(positions[currentPosition])

            Sleep(mod.math.random(2, 10))

            if mod.moveto.MoveToPoint(lookAtPos, MovementSpeed.Walk, me, 5.0 ) then
                UseSpell("Target_LOW_SorcerousSundries_MageHandCreateWater", lookAtPos,nil,nil,nil,true,true,true)
            end
            
            if currentPosition < 4 then currentPosition = currentPosition + 1
            else currentPosition = 1 end

        end
    }
end
}