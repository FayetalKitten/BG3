game.states.TUT_BackupCambion = State{
    function()
        description = [[Cambion going to transponder, will go to helm if he can.]]
        modules = {"shared.util", "shared.moveto"}

        local transponder = Entity("S_TUT_Helm_ConsolePointArea_870b647f-5853-4f1a-9c39-a4915808201a")
        local reachedTransponderFlag = Flag("TUT_Helm_Event_ReachedTransponder_f48e0c6e-495f-44c3-b0bf-b30819cd0e6e")


        nodes.Wander = Action{
            function()
                Wander(5, 4, MovementSpeed.Stroll, transponder)
                Sleep(random(3,5))
            end,
            Valid = function()
                return GetFlag(reachedTransponderFlag,me)
            end
        }


        nodes.GoingToTransponder = Action {
            function()
                if mod.moveto.MoveToPoint(transponder, MovementSpeed.Run, me) then
                else
                    SteerTo(transponder)
                    Sleep(2)
                end
            end,
            Valid = function()
                return not GetFlag(reachedTransponderFlag,me)
            end
        }

    end
}