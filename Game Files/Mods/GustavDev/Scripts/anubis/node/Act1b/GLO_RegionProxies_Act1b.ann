game.states.GLO_RegionProxies_Act1b = State { function ()

    local inCamp = Flag("CAMP_GLO_State_InCamp_161b7223-039d-4ebe-986f-1dcd9a66733f")

    description = [[Contains a proxy for Act1b - Creche. To be used on global entities in this Act only.]]

    params.CAMP = { type = EParamType.State,
        required = false, default = nil,
        help = [[State to be active only in the campsite.]]
    }
    params.CRE = { type = EParamType.State,
        required = false, default = nil,
        help = [[State to be active only in the creche.]]
    }
    params.act1b = { type = EParamType.State,
        required = false, default = nil,
        help = [[State to be active only in CRE_Main_A.]]
    }

    nodes = ImmediateSelector {}

    nodes.CAMP = Proxy {
        params.CAMP,
        Valid = function()
            return GetFlag(inCamp,me)
        end
    }


    nodes.Act1b = ImmediateSelector {
        Valid = function(node)
            return CheckCurrentGameLevel("CRE_Main_A") and CheckAnySelectable(node)
        end
    }
    nodes.Act1b.CRE = Proxy {
        params.CRE
    }
    nodes.Act1b.Main = Proxy {
        params.act1b
    }

    nodes.Fallback = Action {
        function()
            WaitForInterrupt()
        end
    }
end}