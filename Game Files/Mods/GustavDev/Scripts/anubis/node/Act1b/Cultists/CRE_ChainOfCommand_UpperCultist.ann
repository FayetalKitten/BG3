game.states.CRE_ChainOfCommand_UpperCultist = State { function ()

    description = [[Cultist captured by the exterior Gith guard]]
    modules = { "shared.moveto"}

    ------------------------------------------------
    -- Params
    params.CoweringAnim = 
    {
        type = EParamType.String,
        required = false,
        default = "CUST_Begging_01_Loop_fea25636-edee-4245-9709-b98759c8a7d5",
        help = [[Animation for the cultists being thrashed]]
    }
    ------------------------------------------------

    ------------------------------------------------
    -- Local State variables

    local coweringAnim = Animation(params.CoweringAnim)

    ------------------------------------------------
    -- Nodes

    -- Action

    nodes.Action_Cowering = Action
    {
        function()
            if coweringAnim ~= nil then
                PlayAnimation(coweringAnim, false, true)
                WaitForInterrupt()
            else
            WaitForInterrupt()
            end
        end,

        Valid = function()
            return true
        end
    }

   
end
}