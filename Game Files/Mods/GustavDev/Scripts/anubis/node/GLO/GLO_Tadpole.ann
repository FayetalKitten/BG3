game.states.GLO_Tadpole = State{function()
    description = [[Anubis script for tadpoles crawling out of dead TADPOLED enemies]]

    local burrowing

    self.OnInit = function()

        burrowing = Animation("CUST_DebugAsset_CustomAnim_01_Loop_50635108-0b10-4232-820a-aac14df09a75")

    end


    nodes.Default = Action{
        function()
            try
                FleeFrom(RelationType.All, 10.0)
                --PlayAnimation(burrowing, true, false) No animations work on tadpole.
                DebugText(me, "Burrowing Animation")
                SetOnStage(me, false)
            catch ex if ls.CheckType(ex, error.MovementFailed) then
                DebugText(me,"Failed FleeFrom All")
            end
        end
    }

end}

