game.states.Debug_MimicItem = State{function ()

    description = [[A script helper to ease creation and testing of Mimics.
        Assign on an item that you want to become mimic.]]

    params.Mimic = {type = EParamType.String, required=true, help=[[
        Character entity representing the mimic itself
    ]]}

    local mimic = Entity(params.Mimic)

    self.OnInit = function()
        SetEntityEvent(me, "GLO_Mimic_Init", mimic)
    end

--[[
    events.LevelLoaded = function(ev)
        SetEntityEvent(me, "GLO_Mimic_Init", mimic)
    end

    events.LevelGameplayStarted = function(ev)
        SetEntityEvent(me, "GLO_Mimic_Init", mimic)
    end
]]

    nodes.Idle = Action {
        function()
            WaitForInterrupt()
        end
    }
end}
