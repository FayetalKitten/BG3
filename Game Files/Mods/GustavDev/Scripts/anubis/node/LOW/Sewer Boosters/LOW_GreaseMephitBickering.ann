game.states.LOW_GreaseMephitBickering = State{function()
    description = [[Bickering Grease Mephit behaviours]]
    modules = {"shared.dialog", "shared.util"}

    params.aD = {type = EParamType.String, required = false, default = nil, help = [[AD to play]]}
    params.otherMephit = {type = EParamType.String, required = false, default = nil, help = [[Other Mephit to talk to.]]}

    local aD = Dialog(params.aD)
    local otherMephit

    self.OnInit = function()
        otherMephit = FindEntity(params.otherMephit)
    end

    -------------------------------
    -- MURDER TRIBUNAL BEHAVIOUR --
    -------------------------------
    nodes.PlayRepeatedAD = Action {
        function()
            --SteerTo(otherMephit)
            StartAutomatedDialogRateLimitedImmediate(aD,5.0,20.0,me,otherMephit)
            mod.util.SleepRandom(3.0, 7.0)
        end,
    }
    
    nodes.fallback = Action {
        function()
            Sleep(3.0)
        end,
    }
    end
}