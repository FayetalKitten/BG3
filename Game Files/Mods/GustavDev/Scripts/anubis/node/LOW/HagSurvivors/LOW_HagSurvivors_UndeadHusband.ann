game.states.LOW_HagSurvivors_UndeadHusband = State{function()

    local mayrina = Entity("S_HAG_Hagspawn_SurrogateMother_08c970d7-3138-45e8-8965-68eadf4b07cd")
    local mayrinaCuredFlag = Flag("LOW_HagSurvivors_State_SurrogateMotherCured_f76de6bd-5212-4fd5-beeb-5b05a41f55b7")

    nodes.FollowMayrina = Action{
        CanEnter = function()
            return GetFlag(mayrinaCuredFlag) and not mayrina.Character.IsDead()
        end,

        function()
            Sleep(1.0)
            SetFollowCharacter(me.Character, mayrina.Character)
            FollowOwnerOrLeader()
        end
    }

    nodes.FallbackIdle = Action{
        function()
            WaitForInterrupt()
        end
    }

end}